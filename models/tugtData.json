{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://mobistudy.org/models/tugtData.json",
  "title": "Timed up and go test data",
  "description": "Complete data of the results of the timed up and go test",
  "type": "object",
  "properties": {
    "motion": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/accSample"
      }
    },
    "orientation": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/orientSample"
      }
    }
  },
  "required": [
    "motion",
    "orientation"
  ],
  "$defs": {
    "accSample": {
      "description": "Sample holding data about phone's acceleration",
      "type": "object",
      "properties": {
        "msFromStart": {
          "description": "Millis from when the data capture was started",
          "type": "integer"
        },
        "interval": {
          "type": "number"
        },
        "acc": {
          "description": "Triaxial acceleration without gravity",
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          }
        },
        "accG": {
          "description": "Triaxial acceleration with gravity",
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          }
        },
        "rotRate": {
          "description": "Triaxial rotation rate",
          "type": "object",
          "properties": {
            "alpha": {
              "type": "number"
            },
            "beta": {
              "type": "number"
            },
            "gamma": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "msFromStart",
        "acc",
        "accG"
      ]
    },
    "orientSample": {
      "description": "Sample holding data about phone's orientation",
      "type": "object",
      "properties": {
        "msFromStart": {
          "description": "Millis from when the data capture was started",
          "type": "integer"
        },
        "abs": {
          "type": "boolean"
        },
        "alpha": {
          "type": "number"
        },
        "beta": {
          "type": "number"
        },
        "gamma": {
          "type": "number"
        }
      },
      "required": [
        "msFromStart"
      ]
    }
  }
}
