{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://mobistudy.org/models/holdPhoneData.json",
  "title": "Hold the phone data",
  "description": "Complete data of the results of the hold-the-phone tremor test",
  "type": "object",
  "properties": {
    "resting": {
      "$ref": "#/$defs/phaseData"
    },
    "postural": {
      "$ref": "#/$defs/phaseData"
    },
    "kinetic": {
      "$ref": "#/$defs/phaseData"
    }
  },
  "required": [
    "resting",
    "postural",
    "kinetic"
  ],
  "$defs": {
    "accSample": {
      "description": "Sample holding data about phone's acceleration",
      "type": "object",
      "properties": {
        "msFromStart": {
          "description": "Millis from when the data capture was started",
          "type": "integer"
        },
        "interval": {
          "type": "integer"
        },
        "acc": {
          "description": "Triaxial acceleration without gravity",
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          }
        },
        "accG": {
          "description": "Triaxial acceleration with gravity",
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          }
        },
        "rotRate": {
          "description": "Triaxial rotation rate",
          "type": "object",
          "properties": {
            "alpha": {
              "type": "number"
            },
            "beta": {
              "type": "number"
            },
            "gamma": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "msFromStart",
        "acc",
        "accG"
      ]
    },
    "orientSample": {
      "description": "Sample holding data about phone's orientation",
      "type": "object",
      "properties": {
        "msFromStart": {
          "description": "Millis from when the data capture was started",
          "type": "integer"
        },
        "abs": {
          "type": "number"
        },
        "alpha": {
          "type": "number"
        },
        "beta": {
          "type": "number"
        },
        "gamma": {
          "type": "number"
        }
      },
      "required": [
        "msFromStart"
      ]
    },
    "handData": {
      "type": "object",
      "properties": {
        "startedTS": {
          "type": "string"
        },
        "completedTS": {
          "type": "string"
        },
        "motion": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/accSample"
          }
        },
        "orientation": {
          "type": "array",
          "items": {}
        }
      }
    },
    "phaseData": {
      "type": "object",
      "properties": {
        "left": {
          "$ref": "#/$defs/handData"
        },
        "right": {
          "$ref": "#/$defs/handData"
        }
      }
    }
  }
}
